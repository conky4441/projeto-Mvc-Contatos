@model ContatoModel
@{
    ViewData["Title"] = "Cadastrar Contato";
}

<h1 class="h3 mb-4">Adicionar Novo Contato</h1>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-controller="Contatos" asp-action="Criar" method="post">
            <div class="mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
                @Html.ValidationMessageFor(a => a.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
                @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="telefone" class="form-label">Telefone</label>
                <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o telefone">
                @Html.ValidationMessageFor(a => a.Telefone, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex gap-2">
                <a class="btn btn-secondary flex-fill" asp-controller="Contatos" asp-action="Index">Voltar</a>
                <button type="submit" class="btn btn-success flex-fill">Adicionar</button>
            </div>
        </form>
    </div>
</div>
