@using ProjetoMVC.Api.Dtos
@model RedefinirSenhaDto
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}

<div class="centraliza-tela">
    <div class="card shadow p-4" style="min-width: 400px; border-radius: 1rem;">
        <div class="text-center mb-4">
            <h1 class="h2">Redefinir Senha</h1>
            <p class="text-muted mb-0">Preencha seu e-mail abaixo</p>
        </div>

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form asp-action="Enviar" asp-controller="RedefinirSenha" method="post">
            <div class="form-group mb-3">
                <label class="form-label" for="email">E-mail</label>
                <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Digite seu e-mail">
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-2">Enviar</button>
             <a class="btn btn-secondary w-100" asp-controller="Login" asp-action="Index" role="button">Voltar</a>
        </form>
    </div>
</div>
